@page
@model BankStartWeb.Pages.Account.TransferModel
@{
}

<form method="post">
    
    <div class="form-group">
        <label asp-for="Amount">Amount</label>
        <input class="form-control" asp-for="Amount" />
        <span class="field-validation-error" asp-validation-for="Amount"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReceiverId">Receiver Id</label>
        <input class="form-control" asp-for="ReceiverId" />
        <span class="field-validation-error" asp-validation-for="ReceiverId"></span>
    </div>


    <button type="submit" class="btn">Send Transfer</button>
</form>

